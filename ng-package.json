{
    "$schema": "./node_modules/ng-packagr/ng-package.schema.json",
    "name": "ngx-language-selector",
    "version": "1.1.0",
    "description": "An Angular 4+ component integrating ngx-translate. First the browser language is detected and applied.",
    "lib": {      
        "entryFile": "public_api.ts",
        "umdModuleIds": {
            "@ngx-translate/core": "ngx-translate-core",
            "@ngx-translate/core/index": "ngx-translate-core",
            "@ngx-translate/http-loader": "ngx-translate-http-loader",
            "@ngx-translate/http-loader/index": "ngx-translate-http-loader"
        },
        "dest": "ngx-language-selector"
    }    
  }